@model Narzedzia.Models.Awaria

@{
    ViewData["Title"] = "Usuwanie awarii";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/AwarieStyle.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap">

</head>
<h1 class="oswald_400 tools-header">Usuwanie awarii:</h1>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {
        <h5 class="alert alert-info" role="alert"><i class="bi-info-circle"></i>&nbsp; @ViewBag.DeleteMessage</h5>
    }
    else
    {
        <h5 class="alert alert-danger" role="alert"><i class="bi-exclamation-triangle"></i>&nbsp; Czy na pewno usunąć tą awarię?</h5>
    }
}
<div>
    <h4>Awaria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Opis awarii:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionAwaria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Telefon kontaktowy:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberAwaria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Data zgłoszenia:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPrzyjecia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Użytkownik zgłaszający:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uzytkownicy.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Nazwa narzędzia:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Narzedzie.Nazwa)
        </dd>
    </dl>


    <form asp-action="Delete">
        @{
            if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
            {
                <input type="hidden" asp-for="IdAwaria" />
                <input type="submit" value="Usuń" class="btn btn-danger" />
            }
        }
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    </form>
</div>
