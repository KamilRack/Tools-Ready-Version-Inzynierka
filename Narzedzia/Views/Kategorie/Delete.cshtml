@model Narzedzia.Models.Kategoria

@{
    ViewData["Title"] = "Usuwanie kategorii";
}

<h1 class="oswald_400 tools-header">Usuwanie kategorii:</h1>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {
    <h5 class="alert alert-info" role="alert"><i class="bi-info-circle"></i>&nbsp; @ViewBag.DeleteMessage</h5>
    }
    else
    {
    <h5 class="alert alert-danger" role="alert"><i class="bi-exclamation-triangle"></i>&nbsp; Czy na pewno usunąć kategorię?</h5>
    }
    }
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NazwaKategorii)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NazwaKategorii)
        </dd>
    </dl>
    
    <form asp-action="Delete">

    @{
        if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
        {
            <input type="hidden" asp-for="KategoriaId" />
            <input type="submit" value="Usuń" class="btn btn-danger" />
        }
    }
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    </form>
</div>
