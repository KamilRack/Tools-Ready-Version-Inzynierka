@model Narzedzia.Models.Narzedzie

@{
    ViewData["Title"] = "Usuwanie narzędzia";
}

<h1 class="oswald_400 tools-header">Usuwanie narzędzia:</h1>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {
    <h5 class="alert alert-info" role="alert"><i class="bi-info-circle"></i>&nbsp; @ViewBag.DeleteMessage</h5>
    }
    else
    {
    <h5 class="alert alert-danger" role="alert"><i class="bi-exclamation-triangle"></i>&nbsp; Czy na pewno usunąć narzędzie?</h5>
    }
    }
<div>
    <hr />
    <dl class="row interspace">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producenci.NazwaProducenta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producenci.NazwaProducenta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumerNarzedzia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumerNarzedzia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kategorie.NazwaKategorii)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kategorie.NazwaKategorii)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrzyjecia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPrzyjecia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Przypisany użytkownik")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uzytkownicy.Imie_Nazwisko)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @{
            if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
            {
                    <input type="hidden" asp-for="NarzedzieId" />
                    <input type="submit" value="Usuń" class="btn btn-danger" />
            }
        }
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    </form>
</div>
