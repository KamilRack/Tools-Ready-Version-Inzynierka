@model Narzedzia.Models.Narzedzie

@{
    ViewData["Title"] = "Szczegóły narzędzia";
}

<h1 class="oswald_400 tools-header">Szczegóły narzędzia:</h1>

<style>
    .details-image {
        width: 300px; /* Dowolny rozmiar zdjęcia na stronie "Details" */
        height: 300px;
    }
</style>
<div>
    <hr />
    <dl class="row interspace" style="font-size: 1.1rem;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProducentId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producenci.NazwaProducenta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumerNarzedzia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumerNarzedzia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KategoriaId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kategorie.NazwaKategorii)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrzyjecia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPrzyjecia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UzytkownikId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uzytkownicy.Imie_Nazwisko)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @switch (@ViewBag.Status)
            {
                case Status.przyjęte:
                    <i class="bi bi-circle-fill" style="color: #abadaf;"></i>
                    break;

                case Status.używane:
                    <i class="bi bi-circle-fill" style="color: var(--bs-success);"></i>
                    break;

                case Status.naprawiane:
                    <i class="bi bi-circle-fill" style="color: var(--bs-primary);"></i>
                    break;

                case Status.zlikwidowane:
                    <i class="bi bi-circle-fill" style="color: var(--bs-secondary);"></i>
                    break;
            }
            @Html.DisplayFor(model => model.Status)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Uwagi)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Uwagi)
            </dd>
        <dd>
            <img src="~/img/narzedziagraphic/@Model.ZdjecieFileName" class="details-image" alt="Zdjęcie narzędzia">

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.NarzedzieId" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>
